---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  href, 
  variant = 'primary',
  size = 'md',
  class: className = ''
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center rounded-md font-semibold transition-colors duration-200';

const variants = {
  primary: 'bg-primary-600 text-white hover:bg-primary-500 focus-visible:outline-primary-600',
  secondary: 'bg-slate-100 text-slate-900 hover:bg-slate-200 dark:bg-slate-700 dark:text-white dark:hover:bg-slate-600'
};

const sizes = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-6 py-3 text-lg'
};

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  class:list={[
    baseStyles,
    variants[variant],
    sizes[size],
    className
  ]}
>
  <slot />
</Element>